<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
        <property name="hibernate.connection.url">jdbc:mysql://planti-db-server.mysql.database.azure.com:3306/planti</property>
        <property name="hibernate.connection.username">PlantiAdmin</property>
        <property name="hibernate.connection.password">Hier einf√ºgen</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>
        <mapping class="com.example.BackendPlanti.Pflanze"/>
        <mapping class="com.example.BackendPlanti.Sensor"/>
        <mapping class="com.example.BackendPlanti.User"/>
    </session-factory>
</hibernate-configuration>

